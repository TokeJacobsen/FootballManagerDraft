@model FmDraft.Models.InitViewModel

@{
    ViewBag.Title = "Initialization";
}
<script src="~/Scripts/scriptInit.js"></script>


<p class="test">TEST TEST TEST</p>

<h2>Initialization</h2>


@using (Html.BeginForm("CreateGame", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="flex-containerMain">
    <div class="all-players">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="playerGroup">
            @Html.LabelFor(model => model.PlayerOne, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.PlayerOne, new { htmlAttributes = new { @class = "form-group", @id = "player1" } })
            @Html.ValidationMessageFor(model => model.PlayerOne, "", new { @class = "text-danger" })
            @Html.DropDownListFor(model => model.FormationP1, Model.formationListItems, "Choose formation");

        </div>

        <div class="playerGroup">
            @Html.LabelFor(model => model.PlayerTwo, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.PlayerTwo, new { htmlAttributes = new { @class = "form-group", @id = "player2" } })
            @Html.ValidationMessageFor(model => model.PlayerTwo, "", new { @class = "text-danger" })
            @Html.DropDownListFor(model => model.FormationP2, Model.formationListItems, "Choose formation");

        </div>
        <div class="playerGroup">

            @Html.LabelFor(model => model.Budget, htmlAttributes: new { @class = "", @style = "margin-right: 5px;" })
            @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @type = "number", @id = "budget" } })
            @Html.DropDownListFor(model => model.Valuta, Model.valutas, "Choose currency ");

        </div>


        <input type="submit" value="Create" class="start btn btn-default" />


    </div>
        @Html.ListBoxFor(model => model.ChosenDivisions, Model.divisionListItems, new { @class = "league-list", @id = "leagues" });

    </div>


}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
